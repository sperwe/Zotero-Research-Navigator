{
  "include": ["src", "typings"],
  "exclude": ["build", "addon", "node_modules"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "esnext",
    "target": "es2018",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es2018", "dom"],
    "types": ["node"],
    "noImplicitAny": false,
    "allowJs": true,
    "noEmit": true
  }
}