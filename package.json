{
  "name": "zotero-research-navigator",
  "type": "module",
  "version": "2.9.1",
  "description": "Track research history and enhance note navigation in Zotero",
  "config": {
    "addonName": "Zotero Research Navigator",
    "addonID": "research-navigator@zotero.org",
    "addonRef": "researchnavigator",
    "addonInstance": "ResearchNavigator",
    "prefsPrefix": "extensions.zotero.researchnavigator"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sperwe/Zotero-Research-Navigator.git"
  },
  "author": "Research Navigator Developer",
  "bugs": {
    "url": "https://github.com/sperwe/Zotero-Research-Navigator/issues"
  },
  "homepage": "https://github.com/sperwe/Zotero-Research-Navigator#readme",
  "license": "MIT",
  "engines": {
    "node": ">=20.12.0"
  },
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "zotero-plugin build",
    "typecheck": "tsc --noEmit",
    "build-prod": "NODE_ENV=production zotero-plugin build",
    "build-debug": "DEBUG_BUILD=true zotero-plugin build",
    "build-simple": "SIMPLE_BUILD=true zotero-plugin build",
    "version:update": "node scripts/update-version.js",
    "build-minimal": "zotero-plugin build --source src/minimal-bootstrap.ts",
    "lint:check": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "release": "zotero-plugin release",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:runner": "node scripts/test-runner.js",
    "test:unit": "node scripts/test-runner.js unit",
    "test:integration": "node scripts/test-runner.js integration",
    "test:ui": "node scripts/test-runner.js ui",
    "test:debug": "node scripts/test-runner.js debug",
    "test:legacy": "node test/simple-test.cjs",
    "test:debug-legacy": "node test/debug-test.cjs",
    "test:full": "node test/run-tests.cjs",
    "test:xpi": "node test/zotero-test-environment.cjs",
    "version:check": "node -e \"const p=require('./package.json'),m=require('./addon/manifest.json');if(p.version!==m.version){console.error('Version mismatch!');process.exit(1);}else{console.log('âœ… Versions match:',p.version);}\"",
    "check:betternotes": "node scripts/check-betternotes.cjs",
    "update-deps": "npm update --save"
  },
  "dependencies": {
    "zotero-plugin-toolkit": "^5.1.0-beta.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@zotero-plugin/eslint-config": "^0.6.7",
    "eslint": "^9.32.0",
    "jest": "^29.5.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.2",
    "zotero-plugin-scaffold": "^0.8.0",
    "zotero-types": "^4.1.0-beta.1"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  }
}
